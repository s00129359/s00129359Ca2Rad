@model IEnumerable<Ca2.Models.Movie>

<table class="table table-bordered table-striped">
    <tr>
        <th>
            <a class="btn btn-xs btn-info1" href="@Url.Action("Index", new { sort = @ViewBag.orderId })">
                &nbsp;Id
            </a>
        </th>
        <th>
            <a class="btn btn-xs btn-info1" href="@Url.Action("Index", new { sort = @ViewBag.nameOrder })">
                
                &nbsp;Movie Name
            </a>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.movieRuntime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.movieShortDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.movieGenre)
        </th>
        <th>
            <a class="btn btn-xs btn-info1" href="@Url.Action("Index", new { sort = @ViewBag.numberOrder })">
                &nbsp;Number
            </a>
        </th>
        <th></th>
    </tr>
    @foreach (var mov in Model)
    {
        <tr>
            <td class="badge">@mov.movieId</td>
            <td>@mov.movieName </td>
            <td>@mov.movieRuntime</td>
            <td>@mov.movieShortDescription</td>
            <td>@mov.movieGenre</td>
            <td>@mov.actorsInMovie.Count()</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = mov.movieId }, new { @class = "btn btn-info btn-xs" }) |
                @Html.ActionLink("Actors", "Details", new { id = mov.movieId }, new { @class = "btn btn-info btn-xs" }) |
                @Html.ActionLink("Delete", "Delete", new { id = mov.movieId }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }
</table>